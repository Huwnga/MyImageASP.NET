@model EmpClient.Models.Employee

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between shadow-sm p-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "", "", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Employees", "Index", "Employees", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>
</div>


<div class="mt-3 px-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.Partial("_fields", Model)

        <div class="d-flex align-items-center my-3">
            <input type="submit" value="Create" class="btn btn-primary me-2" />
            @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-secondary ms-2" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function sendFile(file) {
            var formData = new FormData();
            formData.append('file', file);
            $.ajax({
                type: 'post',
                url: 'fileUploader.ashx',
                data: formData,
                success: function (status) {
                    if (status != 'error') {
                        var my_path = "/Images/Employees/Avatar/" + status;
                        $("#avatarImage").attr("src", my_path);
                        alert("Upload success!");
                    }
                },
                processData: false,
                contentType: false,
                error: function () {
                    alert("Whoops something went wrong!");
                }
            });
        }

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#avatarImage').attr('src', e.target.result).width(50).height(50);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }

        $('#ProfileImage').on('change', function () {
            readURL(this);
        })

        $('#uploadAvatar').on('click', function () {

        })
    </script>
}
