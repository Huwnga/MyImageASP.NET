@using EmpClient.Models;
@using EmpClient.Api;

@model Employee

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Employee> childrens = EmployeesApi.GetChilrensByManagerID(Model.EmployeeID);
}

<div class="d-flex align-items-center justify-content-between shadow-sm p-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "", "", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Employees", "Index", "Employees", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>
</div>

<div class="mt-3 px-5">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Employee</h4>
        <hr />

        @Html.Partial("_details", Model)

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex align-items-center my-3">
                @if (childrens.Count > 0)
                {
                    @Html.ActionLink("This Employee has subemployees! Let's deal with it", "IndexChildren", new { ManagerID = Model.EmployeeID }, new { @class = "btn btn-outline-danger me-2" })
                    <a class=""></a>
                }
                else
                {
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                }

                @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-secondary ms-2" })
            </div>
        }
    </div>
</div>
