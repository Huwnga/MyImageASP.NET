@model EmpClient.Models.Product

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="d-flex align-items-center justify-content-between shadow-sm p-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "", "", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Products", "Index", "Products", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center justify-content-between">
        <a class="d-flex align-items-center btn btn-outline-primary rounded-0 p-1 pe-2" href="/Products/Create">
            <i class="pe-1 bi bi-plus"></i>
            <strong class="d-flex w-100 h-100 text-wrap fw-semibold text-break">
                Create New
            </strong>
        </a>
    </div>
</div>

<div class="mt-3 px-5">
    <div>
        <h4>Product</h4>
        <hr />

        @Html.Partial("_details", Model)
    </div>

    <div class="d-flex align-items-center my-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-dark mw-2" })
        @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-outline-secondary ms-2" })
    </div>
</div>
