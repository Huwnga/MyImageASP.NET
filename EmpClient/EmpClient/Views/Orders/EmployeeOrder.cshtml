@using PagedList.Mvc;
@using EmpClient.Models;
@using System.Configuration;

@model  PagedList.IPagedList<Order>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between shadow-sm p-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "", "", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item active" aria-current="page">Orders</li>
        </ol>
    </nav>
</div>

<div class="mt-3 px-5 pt-3">
    @Html.Partial("~/Views/Shared/_SuccessMessage.cshtml")
    @Html.Partial("~/Views/Shared/_ErrorMessage.cshtml")
    @Html.Partial("_tablesPagedList", Model)

    <div class="d-flex justify-content-between align-items-center container-fluid">
        <div class="text-center">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        </div>

        @Html.PagedListPager(Model, page => Url.Action("EmployeeOrder", new { page = page }))
    </div>
</div>
