@model IEnumerable<EmpClient.Models.Organization>

@{
    ViewBag.Title = "Organizations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex align-items-center justify-content-between shadow-sm p-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "", "", new { area = "" }, null)
            </li>
            <li class="breadcrumb-item active" aria-current="page">Organizations</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center justify-content-between">
        <a class="d-flex align-items-center btn btn-outline-primary rounded-0 p-0 p-1" href="/Organizations/Create">
            <i class="pe-1 bi bi-plus"></i>
            <strong class="d-flex w-100 h-100 text-wrap fw-semibold text-break">
                Create Now
            </strong>
        </a>
    </div>
</div>

<div class="mt-3 px-5 pt-5">
    <div class="table-responsive">
        <table class="table table-hover">
            <tr>
                <th scope="col">
                    ParentOrganizationName
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.OrganizationName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Fax)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th scope="col">

                </th>
            </tr>

            @if (Model.Count() < 1)
            {
                <tr class="table-group-divider">
                    <td colspan="11" class="text-center fw-semibold text-danger">
                        Please add new organizations!
                    </td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr class="table-group-divider">
                    <td>
                        @Html.DisplayFor(modelItem => item.Parent.OrganizationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrganizationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.OrganizationID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.OrganizationID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.OrganizationID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
