@using PagedList.Mvc;
@using EmpClient.Models;

@model  PagedList.IPagedList<EmpClient.Models.Size>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model[0].SizeName)
                </th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @if (Model.Count() < 1)
            {
                <tr>
                    <td colspan="11" class="text-center fw-semibold text-danger">
                        Please add new Size!
                    </td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SizeName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.SizeID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.SizeID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.SizeID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}